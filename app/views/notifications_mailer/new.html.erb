<div class="container-fluid">
  <div class="col-md-8">
    <%= render partial: 'shared/about_us' %>
    blog: ispick.tumblr.com<br />
    twitter: @ispic6
  </div>
</div>
<br />
<br />
<div class="container-fluid">
  <div class="col-md-6">
    <p><strong>Contact us</strong></p>

    <%= bootstrap_form_for @message, :url => create_contact_path do |form| %>
      <fieldset class="fields">
        <div class="field">
          <%= form.text_field :name %>
        </div>

        <div class="field">
          <%= form.text_field :email %>
        </div>
        <div class="field">
          <%= form.text_field :subject %>
        </div>

        <div class="field">
          <%= form.text_area :body, rows: '4' %>
        </div>
      </fieldset>

      <fieldset class="actions">
        <%= form.submit "Send" %>
      </fieldset>
    <% end %>
  </div>
  <br />
</div>