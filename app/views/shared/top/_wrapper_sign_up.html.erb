<div class="btn-group-vertical btn-group-oauth">
  <%= button_group do %>
    <%= bs_button_to '<i class="fa fa-facebook"></i>Create an account with Facebook'.html_safe, user_omniauth_authorize_path(:facebook), class: "btn-block btn-social btn-facebook" %><br />
    <%= bs_button_to '<i class="fa fa-twitter"></i>Create an account with Twitter'.html_safe, user_omniauth_authorize_path(:twitter), class: "btn-default btn-block btn-social btn-twitter" %><br />
    <%= bs_button_to '<i class="fa fa-tumblr"></i>Create an account with Tumblr'.html_safe,  user_omniauth_authorize_path(:tumblr), class: "btn-default btn-block btn-social btn-tumblr" %><br />
    <%= bs_button_to '<i class="fa fa-envelope"></i>Create an account with Email'.html_safe, '/sign_up', class: "btn-default btn-block  btn-social btn-email" %><br />
  <% end %>
</div>
<%= render partial: 'shared/top/warning' %>
<div align="center">
  <%= bs_button_to 'Log in', '/signin_with_password', class: "btn btn-default" %>
</div>