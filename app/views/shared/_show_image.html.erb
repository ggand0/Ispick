<%= stylesheet_link_tag 'images_detail' %>

<br />
<div class="image-title">
  <%= strip_tags(image.title) %>
</div>
<%= render_clip_button(image, 'btn') %>
<%= render_like_button(image, 'btn') %>
<hr>

<div class="image-detail">
  <%= pencil_glyphicon %> <%= image.artist ? image.artist : 'Unknown artist' %>
  <br /><br />
  <%= comment_glyphicon %> <%= strip_tags(image.caption) if image.caption %>
  <br /><br />
  <%= link_glyphicon %> <%= link_to "#{image.page_url}", image.page_url.html_safe, :target => "_blank" if image.page_url %>
  <br /><br />
  <%= tags_glyphicon %>
  <% image.tags.each do |tag| %>
    <%= bs_button_to tag.name, { controller: 'users', action: 'search', query: "#{tag.name}" }, class: 'btn-default btn-xs' %>
  <% end %>
</div>

<div class="image-share">
  <div class="image-time"><%= "Created: #{get_jst_string(image.created_at)}".html_safe %><br /></div>
  <div class="image-time"><%= "Posted:  #{get_jst_string(image.posted_at)}".html_safe %><br /></div>


  <div class="share-button"><%= tweet_button(count: 'none') %></div>
  <div class="share-button">
    <!-- We need to set the app public to use this like button -->
    <%# like_button(CONFIG['facebook_app_id'].to_i) %>
  </div>
  <div class="share-button"><%= pinit_button(url: image.page_url, media: image.original_url, description: strip_tags(image.caption)) %></div>
  <div class="share-button">
    <script src="http://platform.tumblr.com/v1/share.js"></script>
    <a href="http://www.tumblr.com/share/photo?source=<%=u image.original_url %>&caption=<%=u strip_tags(image.caption) %>&clickthru=<%=u image.page_url %>" title="Share on Tumblr" style="display:inline-block; text-indent:-9999px; overflow:hidden; width:20px; height:20px; background:url('http://platform.tumblr.com/v1/share_4.png') top left no-repeat transparent;"></a>
  </div>

</div>

<!-- Insert space -->
<div style="clear: both;">
  <br />
</div>
