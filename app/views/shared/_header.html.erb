<%= render 'shared/modal_avatar' %>


<nav class="navbar navbar-ispick" role="navigation">
  <!-- Render logo image in navbar's "brand" area -->
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </button>
    <%= link_to image_tag(asset_path('ispick_logo_half0.png'), class: 'logo'), home_users_path %>
  </div>


  <%= navbar_collapse do %>
    <%= navbar_group class: 'collapse-header', id: 'menu' do %>

      <!-- To add "collapse-item" to all navbar items, this block is written in raw html -->
      <li class="dropdown collapse-item">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">User<span class="caret"></span></a>
        <ul class="dropdown-menu" role="menu">
          <%= navbar_item 'Boards', boards_users_path, class: 'collapse-item' %>
          <%= navbar_item 'Settings', settings_users_path %>
          <%= navbar_dropdown_divider %>
          <%= navbar_item 'Log out', destroy_user_session_path %>
        </ul>
      </li>

      <!-- Other items is rendered by helper methods as usual -->
      <%= navbar_item 'Home', home_users_path, class: 'collapse-item' %>
      <%= navbar_item 'RSS', rss_users_path, class: 'collapse-item' %>
      <%= navbar_item 'Tags', preferences_users_path, class: 'collapse-item' %>
      <%= navbar_item 'About us', new_contact_path, class: 'collapse-item' %>

    <% end %>


    <!-- Render Ransack search form -->
    <%= search_form_for @search, url: search_images_path, html: { class: "custom-search-form navbar-form navbar-left collapse-item", role: 'search' } do |f| %>
      <div class="input-group">
        <%= f.text_field :tags_name_cont, class: "form-control", placeholder: "Search"  %>
        <span class="input-group-btn">
          <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </span>
      </div>
    <% end %>
  <% end %>
</nav>