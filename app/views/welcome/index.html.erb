<h1><strong>Ispick v0.3</strong></h1>
<p>Ispick is an illustration aggregation service!</p>

<div class="top-image">
  <%= link_to (image_tag asset_path('top_madoka.jpg')), 'http://ispick.tumblr.com/', style: " z-index: 1;"%>
</div>

<div class="wrapper-oauth">
  <div class="btn-group-vertical btn-group-oauth">
    <%= bs_button_to 'Continue with Facebook', user_omniauth_authorize_path(:facebook), class: "btn btn-default btn-block" %><br>
    <%= bs_button_to 'Continue with Twitter', user_omniauth_authorize_path(:twitter), class: "btn btn-default btn-block" %><br>
    <%= bs_button_to 'Continue with Pinterest', '/', class: "btn btn-default btn-block" %><br>
    <%= bs_button_to 'Continue with Email', '/sign_up', class: "btn btn-default btn-block" %><br>
  </div>
  <div align="center">
    <%= link_to 'Login', '/signin_with_password' %>
  </div>
</div>
<br>
<br>
<div>
  <!-- デバッグ用OAuthログイン -->
  <h3>Debug</h3>
  <% if user_signed_in? %>
    <%= link_to 'Logout', destroy_user_session_path %>
  <% else %>
    <%= link_to "Login with twitter", user_omniauth_authorize_path(:twitter) %><br>
    <%= link_to "Login with facebook", '/' %>
  <% end %>
</div>