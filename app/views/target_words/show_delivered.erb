<%= javascript_include_tag 'users_home' %>

<h1>Listing delivered_images of <%= @target_word.word %></h1>
<br>
<%= link_to 'Back', :back %>
<br>
<br>
<div class="wrap">
  <% @delivered_images.each do |delivered_image| %>
    <% image = delivered_image.image %>
    <div class="box">
      <div class="boxInner">
        <div class="favored">
          <div class="id"><%= delivered_image.id %></div>
          <%= raw get_clip_string_styled(delivered_image) %>
        </div>

        <%= link_to 'Hide', avoid_delivered_image_path(delivered_image), method: :put %>
        <%= link_to 'Destroy', delivered_image, method: :delete, data: { confirm: 'Are you sure?' } %>
        <%= link_to(image_tag(image.data.url(:thumb)), { controller: 'delivered_images', action: 'show', id: image.id.to_s }) %>
        <div class="titleBox"><%= image.title.to_s %></div>
      </div>
    </div>
  <% end %>
</div>

<%= paginate @delivered_images %>