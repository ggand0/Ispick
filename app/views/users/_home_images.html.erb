<%= paginate images unless images.nil? %>

<div id="images" class="wrap" infinite-scroll="image.nextPage()" infinite-scroll-distance="2">
  <div ng-repeat='item in image.items'>
    <div class="box">
      <div class="boxInner">
        <%# link_to image_tag('{{item.thumb}}'), { controller: 'images', action: 'show', id: '{{item.id}}', remote: true, 'data-toggle' => "modal", 'data-target' => '#modal-image' } %>
        <a data-remote="true" href="/images/{{item.id}}?data-target=%23modal-image&amp;data-toggle=modal"><img alt="" src={{item.thumb}} /></a>

        <div class="titleBox">
          <div class="id">{{item.id}}</div>
          <%= button_group class: 'pull-right blocks' do %>
            <%= render_clip_button('{{item.id}}') %>
            <%= render_show_button('{{item.id}}') %>
            <%= render_show_debug_button('{{item.id}}') %>
          <% end %>
          <br />
        </div>

        <div class="title">
          {{item.title}}<br />
          <div class="time-string">
            <%# "CA: #{get_jst_string(image.created_at)}" %><br />
            <%# "PA: #{get_jst_string(image.posted_at)}" %>
            PA: {{item.posted_at}}
          </div>
        </div>


      </div>
    </div>
  </div>


