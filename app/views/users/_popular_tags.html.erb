<h3>Popular tags</h3>
<div class="popular-tags">
  <% if people.nil? %>
    <%= popular_tags.each do |target_word| %>
      <% name = target_word.name ? target_word.name : target_word.name_english %>
      <%= bs_button_to name, { controller: 'target_words', action: 'create', id: target_word.person.id, target_word: { name: target_word.name }}, method: :post, remote: true, class: 'btn btn-default' unless target_word.person.nil? %>
    <% end %>
  <% else %>
    <% people.each do |person| %>
    <% name = person.name ? person.name : person.name_english %>
      <%= bs_button_to name, { controller: 'target_words', action: 'create', id: person.id, target_word: { name: name }}, method: :post, remote: true, class: 'btn btn-default' %>
    <% end %>
  <% end %>
</div>