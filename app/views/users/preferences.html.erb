<%= stylesheet_link_tag 'users' %>

<div class="container-fluid">

    <!-- Render the search form -->
    <%= search_form_for @search_tags, url: preferences_users_path, html: { method: :post },
      remote: true, class: "search-tags col-md-5 col-lg-5 col-sm-5" do |f| %>
        Search a tag to follow!
        <div class="input-group">
        <%= f.text_field :name_cont, class: "form-control",  placeholder: 'Search tags' %>

        <span class="input-group-btn">
          <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </span>
        </div>
    <% end %>

    <!-- Render a dropdown to switch popular tags source
    <%= bs_dropdown_button_to list_glyphicon do %>
      <li><%= link_to 'Tags used for crawling', { controller: 'users', action: 'preferences', target_words: true }, class: 'btn-default' %></li>
      <li><%= link_to 'All tags', { controller: 'users', action: 'preferences' }, class: 'btn-default' %></li>
    <% end %>
    <br />
    <br />-->


  <div class="clearfix visible-lg-block"></div>
  <div class="clearfix visible-md-block"></div>
  <div class="clearfix visible-sm-block"></div>

<div class="row vertical-align">
  <!-- Render popular tags or search result in the partial -->
  <div class="wrapper-popular-tags col-md-5 col-lg-5">
    <%= render partial: 'users/popular_tags', locals: { tags_result: @tags_result, popular_tags: @popular_tags } %>
  </div>

  <div class="arrow col-md-1 col-lg-1">
    <%= image_tag asset_path('arrow_aqua_green_sm.png') %>
  </div>

  <div class="clearfix visible-sm-block"></div>

  <!-- Render followed tags in the partial -->
  <div class="wrapper-followed-tags col-md-5 col-lg-5">
    <%= render partial: 'users/followed_tags', locals: { tags: @tags, test: 'test0' } %>
  </div>
</div>
<br />
<br />

<div class="clearfix visible-md-block"></div>
<div class="clearfix visible-sm-block"></div>
<div class="search-tags col-md-10 col-lg-10 col-sm-10">
  Set default sites for filtering:
  <%= bootstrap_form_tag url: set_sites_users_path, class: "col-md-5 col-lg-5 col-sm-5" do |f| %>
    <% Image::TARGET_SITES_DISPLAY.each_with_index do |site, count| %>
      <label class="checkbox-inline">
      <% if current_user.target_sites.where(name: site).count > 0 %>
        <%= f.check_box site.parameterize.underscore.to_sym, label: Image::TARGET_SITES_DISPLAY[count], label_class: "checkbox-inline", checked: true %>
      <% else %>
        <%= f.check_box site.parameterize.underscore.to_sym, label: Image::TARGET_SITES_DISPLAY[count], label_class: "checkbox-inline" %>
      <% end %>
    </label>
    <% end %>
    <%= f.submit %>
  <% end %>
</div>



  <!-- Insert space -->
  <div style="clear: both;">
    <br />
    <br />
    <br />
  </div>


</div>