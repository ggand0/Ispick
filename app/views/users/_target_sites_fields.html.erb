<div class="target-sites-fields search-tags">
  <h2>Site filtering option:</h2>
  <%= bootstrap_form_tag url: set_sites_users_path, remote: true, class: "col-md-5 col-lg-5 col-sm-5" do |f| %>
    <%= f.label 'Set default sites for filtering images on the home page' %>
    <br />
    <% TargetSite.all.each_with_index do |site, count| %>
      <label class="checkbox-inline">
      <% if current_user.target_sites.where(name: site.name).count > 0 %>
        <%= f.check_box site.name.parameterize.underscore.to_sym, label: site.name, label_class: "checkbox-inline", checked: true %>
      <% else %>
        <%= f.check_box site.name.parameterize.underscore.to_sym, label: site.name, label_class: "checkbox-inline" %>
      <% end %>
    </label>
    <% end %>
    <br />
    <%= f.submit %>
  <% end %>
</div>