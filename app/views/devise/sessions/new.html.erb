<% @pageId = "devise" %>

<%= render "shared/welcome_header" %>

<div id="auth-container">
  <div class="outer-container">
    <div id="auth-form">
      <p class="btn-facebook">
        <%= link_to(user_omniauth_authorize_path(:facebook)) do %>
          <i class="fa fa-facebook"></i>Log in with Facebook
        <% end %>
      </p>
      <p class="btn-twitter">
        <%= link_to(user_omniauth_authorize_path(:twitter)) do %>
          <i class="fa fa-twitter"></i>Log in with Twitter
        <% end %>
      </p>
      <p class="btn-pinterest">
        <%= link_to("/") do %>
          <i class="fa fa-pinterest"></i>Log in with Pinterest
        <% end %>
      </p>
      <h2><i class="fa fa-envelope"></i>Log in with email</h2>
      <%= form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
        <%= devise_error_messages! %>
        <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
        <%= f.password_field :password, autocomplete: 'off', placeholder: 'Password' %>
        <%= f.submit 'Submit' %>
      <% end %>
      <ul id="other-paths">
        <li><%= link_to 'Forgot password?', '/reset_password' %></li>
        <li><%= link_to 'Sign up', '/signup_with_password' %></li>
      </ul>
    </div>
  </div>
</div>
