<div class="wrapper-sign-in">
  <div class="btn-group-vertical btn-group-oauth">
    <%= button_group do %>
      <%= bs_button_to 'Facebookでログイン', '/', class: "btn btn-default btn-block" %><br>
      <%= bs_button_to 'Twitterでログイン', 'user_omniauth_authorize_path(:twitter)', class: "btn btn-default btn-block" %><br>
      <%= bs_button_to 'Pinterestでログイン', '/', class: "btn btn-default btn-block" %><br>
      <br>

      <div align="center">
        <%= bootstrap_form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
          <%= f.email_field :email, autofocus: true, placeholder: 'メールアドレス' %>
          <%= f.password_field :password, autocomplete: 'off', placeholder: 'パスワード' %>
          <%= f.submit '決定' %>
        <% end %>
      </div>

    <% end %>
  </div>
  <br>
  <br>
  <div align="center">
    <%= link_to 'パスワードをお忘れの方はこちら', '/reset_password' %><br>
    <%= link_to 'はじめて方はこちら', '/signup_with_password' %>
  </div>
</div>


<%= render "devise/shared/links" %>
