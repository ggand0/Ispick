<div class="container">
  <div class="col-md-6">
    <h2>Forgot your password?</h2>

    <div class="btn-group-oauth">
      <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.email_field :email, autofocus: true, placeholder: 'email address'  %>
        <%= f.submit 'Send' %>
      <% end %>

      <br>
      <div align="left">
        <%= link_to 'Sign in', '/signin_with_password' %> /
        <%= link_to 'Sign up', '/signup' %>
      </div>
    </div>

  </div>
</div>

<%# render "devise/shared/links" %>